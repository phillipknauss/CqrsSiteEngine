@model Commands.PostNewTweetCommand

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tweet</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>New Tweet</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Message)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Message)
            @Html.ValidationMessageFor(model => model.Message)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Channel)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Channel, ViewBag.Channels as List<SelectListItem>)
            @Html.ValidationMessageFor(model => model.Channel)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Who)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Who)
            @Html.ValidationMessageFor(model => model.Who)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
